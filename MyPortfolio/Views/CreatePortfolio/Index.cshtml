@model MyPortfolio.ViewModels.CreatePortfolioViewModel
@{
    ViewBag.Title = "Create Portfolio";
}

<div class="container mt-4 mb-5">

    <h2 class="text-center mb-4">Create Your Portfolio</h2>

    <h3 class="text-center mb-3">Complete The Steps Below To Create Your Portfolio</h3>

    <table class="table table-bordered table-striped text-center">
        
        <thead class="table-dark">
            <tr>
                <th style="width:50%">Steps</th>
                <th style="width:25%">Status</th>
                <th style="width:25%">Action</th>
            </tr>   
        </thead>

        <tbody>

            <tr>
                <td class="text-left">Basic Details</td>
                <td>
                    @if (Model.BasicInfoId == Guid.Empty)
                    {
                        <span class="badge bg-warning" style="font-size:1em;">Incompleted</span>
                    }
                    else
                    {
                        <span class="badge bg-success" style="font-size:1em; color:white;">Completed</span>
                    }
                </td>
                <td>
                    @if (Model.BasicInfoId == Guid.Empty)
                    {
                        @Html.ActionLink("Add", "SaveBasicInfo", "MyBasicInfo", null, new { @class = "btn btn-primary" })
                    }
                    else
                    {
                        @Html.ActionLink("Edit", "SaveBasicInfo", "MyBasicInfo", new { basicInfoId = Model.BasicInfoId }, new { @class = "btn btn-success" })
                    }
                </td>
            </tr>

            <tr>
                <td class="text-left">Education</td>
                <td>
                    @if (Model.EducationId == Guid.Empty)
                    {
                        <span class="badge bg-warning" style="font-size:1em;">Incompleted</span>
                    }
                    else
                    {
                        <span class="badge bg-success" style="font-size:1em; color:white;">Completed</span>
                    }
                </td>
                <td>
                    @if (Model.EducationId == Guid.Empty)
                    {
                        @Html.ActionLink("Add", "SaveEducation", "MyEducation", null, new { @class = "btn btn-primary" })
                    }
                    else
                    {
                        @Html.ActionLink("Edit", "SaveEducation", "MyEducation", new { educationId = Model.EducationId }, new { @class = "btn btn-success" })
                    }
                </td>
            </tr>

        </tbody>

    </table>

</div>

